{
  "name": "custom/template-test",
  "type": "project",
  "description": "Just a composer.json to test coding standards on.",
  "require": {
    "ext-json": "*",
    "PHP": ">=7.1",
    "drupal/coder": "^8.3",
    "enlightn/security-checker": "^1.9",
    "ergebnis/composer-normalize": "^2.15",
    "mglaman/phpstan-drupal": "^0.12.10",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpmd/phpmd": "^2.10",
    "phpro/grumphp": "^1.3",
    "phpstan/phpstan-deprecation-rules": "^0.12.6"
  },
  "require-dev": {
    "composer/installers": "^1.7",
    "drupal/core-composer-scaffold": "^9.1",
    "drupal/core-dev": "^9.1",
    "drupal/core-recommended": "^9.1",
    "phpspec/prophecy-phpunit": "^2",
    "verbruggenalex/coding-standards": "dev-master"
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "drupal-scaffold": {
      "allowed-packages": [
        "drupal/core"
      ],
      "locations": {
        "web-root": "./web"
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ]
    }
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "local": {
      "type": "path",
      "url": "../../coding-standards"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "phpcs": "./vendor/bin/phpcs ./vendor/drupal/coder/tests/",
    "phpmd": "./vendor/bin/phpmd web/ text phpmd.xml",
    "phpstan": "./vendor/bin/phpstan analyse --memory-limit=1G"
  }
}
