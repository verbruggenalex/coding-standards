{
    "name": "verbruggenalex/coding-standards",
    "type": "composer-plugin",
    "description": "Coding standards package",
    "authors": [
        {
            "name": "Alexander Verbruggen",
            "email": "alexander.verbruggen@intracto.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^2.0"
    },
    "require-dev": {
        "composer/composer": "^2.1",
        "enlightn/security-checker": "^1.9",
        "ergebnis/composer-normalize": "^2.15",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^0.12.6",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "extra": {
        "class": "VerbruggenAlex\\CodingStandards\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "VerbruggenAlex\\CodingStandards\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p vendor/verbruggenalex/coding-standards",
            "cp -Rf standards/ vendor/verbruggenalex/coding-standards",
            "cp -Rf templates/composer/* ./"
        ],
        "install-codestandards": [
            "VerbruggenAlex\\CodingStandards\\Plugin::run"
        ],
        "setup-drupal": [
            "sudo mkdir -p ../builds/drupal",
            "sudo chown $(id -u):$(id -g) ../builds/drupal",
            "cp templates/drupal/* ../builds/drupal",
            "composer install -d ../builds/drupal",
            "cd ../builds/drupal/htdocs && mkdir -p modules/custom themes/custom profiles/custom",
            "composer require -d ../builds/drupal --no-interaction drupal/coder enlightn/security-checker ergebnis/composer-normalize mglaman/phpstan-drupal php-parallel-lint/php-parallel-lint phpmd/phpmd phpro/grumphp phpstan/phpstan-deprecation-rules"
        ]
    }
}
